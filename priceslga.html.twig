                var fl=0;
                $(window).scroll(function () {
                    if ($(this).scrollTop() > 150) {
                        $(".slideanim").removeClass("slideout");
                        $(".slideanim").addClass("slidein");
                        fl=1;
                    }

                    if ($(this).scrollTop() < 150 && fl==1) {
